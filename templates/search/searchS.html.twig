{% extends 'base.html.twig' %}

{% block title %}Liste Station{% endblock %}

{% block content %}

    <div class="main-panel">

        <h1>Liste Station</h1>

        <form method="post" action="#">
            <input type="text"  placeholder="Recherche" name ="recherche">
            <input type="submit" value="Recherche Service"  class="btn btn-primary" >
        </form>

        <form  method="post" action="{{ path('ajouts') }}">
            <input type="submit" value="Ajouter Service"  class="btn btn-primary" >
        </form>

        <table border="2" class="table table-striped">

            <tr>
                <th>Id</th>
                <th>Nom</th>

                <th>Supprimer</th>
                <th>Modifier</th>

            </tr>

            <tr {% for e in service %} >

                <td>{{ e.id }}</td>
                <td>{{ e.nom }}</td>


                <td ><a href="{{ path('supprimes',{'id':e.id}) }}"  class="badge badge-danger">Supprimer</a></td>

                <td ><a href="{{ path('modifies',{'id':e.id}) }}"  class="badge badge-danger">Modifier</a></td>


            </tr {% endfor %} >
        </table>



    </div>
{% endblock %}
